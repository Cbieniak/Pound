<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_pet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/mediumPadding">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/raised"
                android:orientation="vertical"
                android:paddingBottom="@dimen/mediumPadding"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/create_pet_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/pet_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/highlight" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/create_pet_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/create_pet_add_image"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:layout_weight=".6"
                        android:background="@color/background">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/highlight"
                            android:background="@drawable/item_background"
                            android:id="@+id/create_pet_image_progress"
                            android:textSize="50dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/create_pet_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name" />

                        <EditText
                            android:id="@+id/create_pet_species"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:hint="@string/species"
                            android:textSize="20dp"
                            />

                        <EditText
                            android:id="@+id/create_pet_breed"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/breed"
                            android:focusable="false"
                            android:clickable="true"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/create_color_holder"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/background">

                    <TextView
                        android:id="@+id/colour_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/color"
                        android:textColor="@color/highlight"
                        android:background="@drawable/item_background"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/create_pet_location"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="@string/location" />

                <EditText
                    android:id="@+id/create_pet_reward"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/reward"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/create_pet_notes"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/notes"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/mediumPadding"
                android:layout_weight="3"
                android:background="@color/raised"
                android:orientation="vertical"
                android:paddingBottom="@dimen/mediumPadding"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/create_pet_owner_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/owner_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/highlight" />

                <EditText
                    android:id="@+id/create_pet_owner_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/create_pet_contact_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/contact_detail"
                    android:inputType="textPersonName"
                    android:focusable="false"
                    android:clickable="true"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>